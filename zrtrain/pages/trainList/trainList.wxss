.date {
  height: 40px;
  background: #5495e6;
  display: flex;
  flex-direction: row;
}

.date view {
  margin: 0 auto;
  color: #fff;
  padding-top: 10px;
}
.content{
  height: 600px;
  background: #F4F4F4;
  padding-top: 10px;
}
.bg{
  width: 95%;
  height: 90px;
  background: #fff;
  margin: 0 auto;
  border-radius: 5px;
  margin-bottom: 10px;
}
.item{
  display: flex;
  flex-direction: row;
  padding: 10px;
}
.wrApper{
  width: 25%;
}
.left{
  text-align: left;
}
.center{
  text-align: center;
}
.right{
  text-align: right;
}
.blue{
  color: #5495E6;
  font-weight: bold;
  font-size: 16px;
}
.normal{
  color: #000;
  font-weight: bold;
  font-size: 16px;
}
.small{
  font-size: 13px;
  color: #666;
}
.line{
  height: 1px;
  background: #ccc;
  opacity: .2;
  width: 80%;
  margin: 0 auto;
  margin-top: 3px;
  margin-bottom: 3px;
}
.buy{
  background: red;
  width: 42px;
  height: 20px;
  line-height: 20px;
  font-size: 12px;
  color: #fff;
  text-align: center;
  float: right;
  border-radius: 20px;
  margin-right: 5px;
}
.hr{
  height: 1px;
  background: #ccc;
  opacity: .2;
}
.seat{
  font-size: 13px;
  display: flex;
  flex-direction: row;
  margin-left: 5px;
  /* margin-top: 10px; */
}
.seat text{
  color: red;
}
.no{
  color: #999;
  margin-left: 10px;
}
.yes{
  margin-right:10px; 
}
.bottomNav{
  background: #505963;
  display: flex;
  flex-direction: row;
  height: 45px;
  line-height: 45px;
  position: fixed;
  bottom: 0px;
  width: 100%
}
.bottomNav view{
   margin: 0 auto;
}
.selected{
  font-size: 13px;
  color: #5495E6
}
.common{
  font-size: 13px;
  color: #fff;
}